{
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "build:schema": "npm run build:schema -w intl-schematic",
    "build": "turbo build",
    "type-check": "tsc",
    "version": "cross-env-shell \"npm version $npm_package_version --no-git-tag-version -w intl-schematic\" && git add **/package*.json",
    "prerelease": "npm version prerelease --preid=rc",
    "pre-patch": "npm version prerelease --preid=rc",
    "pre-minor": "npm version preminor --preid=rc",
    "pre-major": "npm version premajor --preid=rc",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.1.0",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "tsup": "^8.0.1",
    "turbo": "^1.11.2"
  },
  "version": "1.0.0-rc.0"
}
