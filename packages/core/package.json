{
  "name": "intl-schematic",
  "version": "1.0.0-rc.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Raiondesu/intl-schematic"
  },
  "module": "src/index",
  "exports": {
    ".": "./src/index",
    "./plugins/processors": "./src/plugins/processors/plugin",
    "./processors": "./src/plugins/processors/index",
    "./processors/*": "./src/plugins/processors/*",
    "./plugins": "./src/plugins/index",
    "./plugins/*": "./src/plugins/*",
    "./translation.schema": "./src/translation.schema",
    "./schema": "./src/ts.schema"
  },
  "typesVersions": {
    "*": {
      "index": [
        "./src/index.ts"
      ],
      "processors": [
        "./src/plugins/processors/index.ts"
      ],
      "plugins/processors": [
        "./src/plugins/processors/plugin.ts"
      ],
      "processors/*": [
        "./src/plugins/processors/*"
      ],
      "plugins": [
        "./src/plugins/index.ts"
      ],
      "plugins/*": [
        "./src/plugins/*"
      ],
      "translation.schema": [
        "./src/translation.schema.d.ts"
      ],
      "schema": [
        "./src/ts.schema.d.ts"
      ]
    }
  },
  "types": "src/index",
  "main": "src/index",
  "type": "module",
  "scripts": {
    "build:schema": "node ./generate-schema.js",
    "build:es": "tsc --outDir dist/es -t ES2020 --module ES2020",
    "build:next": "tsc --outDir dist/esnext --module esnext",
    "build": "npm run build:es && npm run build:next",
    "dev": "tsc --noEmit -w",
    "commit-build": "(git diff --quiet && git diff --staged --quiet) || (git commit -am \"Update dist\")",
    "preversion": "npm run build && npm run commit-build",
    "prerelease": "npm version prerelease --preid=rc",
    "pre-patch": "npm version prerelease --preid=rc",
    "pre-minor": "npm version preminor --preid=rc",
    "pre-major": "npm version premajor --preid=rc",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "devDependencies": {
    "json-schema-to-typescript": "^13.0.1",
    "tsconfig": "*",
    "typescript": "^5.3.2"
  }
}
